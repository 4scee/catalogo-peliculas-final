# ───────────────────────────
# Configuración general de la app
# ───────────────────────────
APP_NAME="MovieCatalog"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=${APP_URL}  # Railway configurará la URL pública

# ───────────────────────────
# Logs y cache
# ───────────────────────────
LOG_CHANNEL=stack
LOG_LEVEL=error
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# ───────────────────────────
# Base de datos (Railway Environment Variables)
# ───────────────────────────
DB_CONNECTION=mysql
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_DATABASE=${DB_DATABASE}
DB_USERNAME=${DB_USERNAME}
DB_PASSWORD=${DB_PASSWORD}

# ───────────────────────────
# Redis y Memcached (opcional)
# ───────────────────────────
REDIS_HOST=null
REDIS_PASSWORD=null
REDIS_PORT=null
MEMCACHED_HOST=null

# ───────────────────────────
# Mail (opcional, se puede configurar con Mailgun/SendGrid)
# ───────────────────────────
MAIL_MAILER=smtp
MAIL_HOST=${MAIL_HOST}
MAIL_PORT=${MAIL_PORT}
MAIL_USERNAME=${MAIL_USERNAME}
MAIL_PASSWORD=${MAIL_PASSWORD}
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@moviecatalog.com"
MAIL_FROM_NAME="${APP_NAME}"

# ───────────────────────────
# Pusher (opcional)
# ───────────────────────────
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ───────────────────────────
# Variables para Vite/Frontend
# ───────────────────────────
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

